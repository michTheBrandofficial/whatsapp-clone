{
  "compilerOptions": {
    "paths": {
      "nixix": [
        "./node_modules/nixix-types"
      ],
      "nixix/router": [
        "./node_modules/nixix-types/router"
      ],
      "@styles/*": [
        "./styles/*"
      ],
      "@assets/*": [
        "./assets/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ]
    },
    "resolveJsonModule": true,
    "baseUrl": ".",
    "jsx": "react-jsxdev",
    "jsxImportSource": "nixix-types",
    "typeRoots": [
      "nixix",
      "nixix/router",
      "nixix-types"
    ],
    "module": "es2022",
    "target": "es2022",
    "types": [
      "nixix-types"
    ],
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
  },
  "include": ["**/*"]
}